{
    "name": "screen-vision-ai",
    "version": "2.0.0",
    "description": "Assistente visual com IA para an√°lise de tela - React + Electron + Cloudflare",
    "main": "electron/main.js",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "electron": "electron .",
        "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
        "start": "npm run electron:dev"
    },
    "author": "Screen Vision AI",
    "license": "MIT",
    "dependencies": {
        "@ffmpeg-installer/ffmpeg": "^1.1.0",
        "fluent-ffmpeg": "^2.1.3",
        "framer-motion": "^12.29.2",
        "react": "^18.2.0",
        "react-colorful": "^5.6.1",
        "react-dom": "^18.2.0",
        "react-grid-layout": "^2.2.2",
        "react-router-dom": "^6.21.0",
        "zustand": "^5.0.10"
    },
    "devDependencies": {
        "@vitejs/plugin-react": "^4.2.1",
        "concurrently": "^8.2.2",
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1",
        "vite": "^5.0.12",
        "wait-on": "^7.2.0"
    },
    "build": {
        "appId": "com.screenvision.ai",
        "productName": "Screen Vision AI",
        "directories": {
            "output": "dist"
        },
        "files": [
            "dist/**/*",
            "electron/**/*"
        ],
        "win": {
            "target": "nsis",
            "icon": "public/icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    }
}
